@model Rentix.Models.Rental

@{
    ViewData["Title"] = "Kiralamayı Tamamla";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center py-3">
                <h4 class="mb-0 fw-bold">Kiralama İşlemi</h4>
            </div>

            <div class="bg-light p-3 border-bottom d-flex align-items-center gap-3">
                @if (Model.Vehicle.Images != null && Model.Vehicle.Images.Any())
                {
                    <img src="@Model.Vehicle.Images.First().ImageUrl" class="rounded shadow-sm" style="width: 80px; height: 60px; object-fit: cover;">
                }
                else
                {
                    <img src="https://placehold.co/100x100?text=Arac" class="rounded" style="width: 80px;">
                }

                <div>
                    <h5 class="m-0 fw-bold">@Model.Vehicle.Brand @Model.Vehicle.Model</h5>
                    <span class="badge bg-secondary">@Model.Vehicle.Year</span>
                    <div class="text-primary fw-bold mt-1">
                        @Model.Vehicle.DailyPrice.ToString("C2") <small class="text-muted">/ Günlük</small>
                    </div>
                </div>
            </div>

            <div class="card-body p-4">
                <form asp-action="Rent">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="VehicleId" />

                    <input type="hidden" id="dailyPriceRaw" value="@Model.Vehicle.DailyPrice" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Başlangıç Tarihi</label>
                        <input asp-for="StartDate" type="date" class="form-control form-control-lg" id="startDate" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="StartDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Bitiş Tarihi</label>
                        <input asp-for="EndDate" type="date" class="form-control form-control-lg" id="endDate" />
                        <span asp-validation-for="EndDate" class="text-danger small"></span>
                    </div>

                    <div class="alert alert-info d-flex justify-content-between align-items-center mt-4">
                        <div>
                            <span class="d-block small text-muted">Toplam Süre:</span>
                            <strong id="totalDays">1 Gün</strong>
                        </div>
                        <div class="text-end">
                            <span class="d-block small text-muted">Ödenecek Tutar:</span>
                            <h3 class="m-0 fw-bold text-primary" id="totalPriceDisplay">
                                @Model.Vehicle.DailyPrice.ToString("C2")
                            </h3>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg shadow-sm">
                            <i class="bi bi-check-circle-fill"></i> Kiralamayı Onayla
                        </button>
                        <a asp-controller="Home" asp-action="Gallery" class="btn btn-outline-secondary">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Sayfa yüklendiğinde ve tarih değiştiğinde çalışacak script
        document.addEventListener("DOMContentLoaded", function () {
            const startDateInput = document.getElementById("startDate");
            const endDateInput = document.getElementById("endDate");
            const totalDaysLabel = document.getElementById("totalDays");
            const totalPriceLabel = document.getElementById("totalPriceDisplay");

            // C# tarafındaki virgüllü fiyatı (Örn: 2500,00) JS'nin anlayacağı formata (2500.00) çevir
            const dailyPrice = parseFloat(document.getElementById("dailyPriceRaw").value.replace(',', '.'));

            function calculatePrice() {
                const start = new Date(startDateInput.value);
                const end = new Date(endDateInput.value);

                // Tarihler geçerli mi?
                if (start && end && !isNaN(start) && !isNaN(end)) {
                    // Zaman farkını milisaniye olarak al
                    const diffTime = end - start;

                    // Gün farkına çevir (1000ms * 60sn * 60dk * 24sa)
                    let diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

                    // Eğer gün farkı 0 veya negatifse en az 1 gün say
                    if (diffDays <= 0) diffDays = 1;

                    // Toplam tutarı hesapla
                    const total = diffDays * dailyPrice;

                    // Ekrana yazdır
                    totalDaysLabel.innerText = diffDays + " Gün";

                    // Para formatında yazdır (TL simgesi ile)
                    totalPriceLabel.innerText = new Intl.NumberFormat('tr-TR', { style: 'currency', currency: 'TRY' }).format(total);
                }
            }

            // Tarih kutularına "değişiklik olduğunda hesapla" emri ver
            startDateInput.addEventListener("change", calculatePrice);
            endDateInput.addEventListener("change", calculatePrice);
        });
    </script>
}