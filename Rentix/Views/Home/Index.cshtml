@{
    ViewData["Title"] = "Rentix - Araç Kiralama";
}

</div>

<div class="container-fluid p-0 position-relative">

    <style>
        .hero-section {
            /* Resim Ayarları */
            background: url('https://images.unsplash.com/photo-1568605117036-5fe5e7bab0b7?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80') no-repeat center center;
            background-size: cover;
            /* Yükseklik: Ekranın %85'i olsun */
            min-height: 85vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        /* Resmin üzerindeki siyah filtre */
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.7) 100%);
            z-index: 1;
        }

        /* İçerik Kutusu */
        .hero-content {
            position: relative;
            z-index: 2; /* Filtrenin üstünde durmalı */
            width: 100%;
            max-width: 900px;
            padding: 20px;
        }

        /* Arama Kutusu Tasarımı */
        .search-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            margin-top: 40px;
        }

        .form-label-custom {
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            color: #6c757d;
            margin-bottom: 5px;
            display: block;
        }

        .form-control-lg-custom {
            border: 1px solid #dee2e6;
            background-color: #f8f9fa;
            font-weight: 600;
        }

        /* Kartların üzerine gelince efekt */
        .feature-box {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: white;
            border-radius: 15px;
            overflow: hidden;
        }

            .feature-box:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            }
    </style>

    <div class="hero-section">
        <div class="hero-overlay"></div>

        <div class="hero-content text-center">
            <h1 class="display-3 fw-bold text-white mb-2">Yolculuk Başlasın</h1>
            <p class="fs-4 text-white-50">Konforlu, Güvenli ve Size Özel Araçlar.</p>

            <div class="search-card text-start">
                <form asp-controller="Home" asp-action="Search" method="get" class="row g-3 align-items-end">

                    <div class="col-md-4">
                        <label class="form-label-custom"><i class="bi bi-geo-alt-fill text-danger"></i> Alış Yeri</label>
                        <input type="text" name="location" class="form-control form-control-lg form-control-lg-custom" value="İstanbul, Türkiye" placeholder="Şehir veya Havalimanı">
                    </div>

                    <div class="col-md-3">
                        <label class="form-label-custom"><i class="bi bi-calendar-event"></i> Alış Tarihi</label>
                        <input type="date" name="startDate" class="form-control form-control-lg form-control-lg-custom" value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label-custom"><i class="bi bi-calendar-check"></i> İade Tarihi</label>
                        <input type="date" name="endDate" class="form-control form-control-lg form-control-lg-custom" value="@DateTime.Now.AddDays(3).ToString("yyyy-MM-dd")" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" required>
                    </div>

                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold shadow">
                            <i class="bi bi-search"></i> BUL
                        </button>
                    </div>

                </form>
            </div>

        </div>
    </div>

</div>

<div class="container">

    <div class="py-5 mt-5">

        <div class="text-center mb-5">
            <h6 class="text-primary fw-bold text-uppercase letter-spacing-2">Avantajlarımız</h6>
            <h2 class="fw-bold display-6">Neden Rentix?</h2>
            <div class="mx-auto mt-3" style="width: 60px; height: 3px; background-color: #0d6efd;"></div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-box h-100 border shadow-sm p-4 text-center">
                    <div class="mb-4 d-inline-block p-3 rounded-circle bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-shield-check fs-1"></i>
                    </div>
                    <h4>Tam Kasko</h4>
                    <p class="text-muted">
                        Sürpriz masraflarla karşılaşmayın. Tüm araçlarımız tam kapsamlı kasko güvencesi altındadır.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-box h-100 border shadow-sm p-4 text-center">
                    <div class="mb-4 d-inline-block p-3 rounded-circle bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-headset fs-1"></i>
                    </div>
                    <h4>7/24 Destek</h4>
                    <p class="text-muted">
                        Yolculuğunuzun her anında yanınızdayız. Yol yardım ekibimize tek tıkla ulaşabilirsiniz.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-box h-100 border shadow-sm p-4 text-center">
                    <div class="mb-4 d-inline-block p-3 rounded-circle bg-success bg-opacity-10 text-success">
                        <i class="bi bi-credit-card-2-front fs-1"></i>
                    </div>
                    <h4>Kolay Ödeme</h4>
                    <p class="text-muted">
                        İster online ödeyin, ister araç başında. Kredi kartı ve havale seçenekleriyle esnek ödeme.
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="row justify-content-center py-5 opacity-50 grayscale">
        <div class="col-auto px-4 fs-3 fw-bold text-muted"><i class="bi bi-car-front"></i> BMW</div>
        <div class="col-auto px-4 fs-3 fw-bold text-muted"><i class="bi bi-speedometer"></i> MERCEDES</div>
        <div class="col-auto px-4 fs-3 fw-bold text-muted"><i class="bi bi-gear-wide"></i> AUDI</div>
        <div class="col-auto px-4 fs-3 fw-bold text-muted"><i class="bi bi-lightning-charge"></i> TESLA</div>
    </div>
