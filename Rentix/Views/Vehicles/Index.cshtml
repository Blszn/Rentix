@model IEnumerable<Rentix.Models.Vehicle>
@using Rentix.Models.Enums

@{
    ViewData["Title"] = "Araç Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>🚗 Araç Filosu</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Yeni Araç Ekle
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Marka / Model</th>
                    <th>Plaka</th>
                    <th>Yıl</th>
                    <th>Günlük Fiyat</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="fw-bold">@item.Brand</span>
                            <span class="text-muted small">@item.Model</span>
                        </td>
                        <td><span class="badge bg-dark">@item.PlateNumber</span></td>
                        <td>@item.Year</td>
                        <td>@item.DailyPrice.ToString("C2")</td>
                        <td>
                            @switch (item.Status)
                            {
                                case VehicleStatus.Available:
                                    <span class="badge bg-success">Müsait</span>
                                    break;
                                case VehicleStatus.Rented:
                                    <span class="badge bg-warning text-dark">Kirada</span>
                                    break;
                                case VehicleStatus.Maintenance:
                                    <span class="badge bg-danger">Bakımda</span>
                                    break;
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>