@model Rentix.Models.Vehicle
@using Rentix.Models.Enums

@{
    ViewData["Title"] = "Yeni Araç Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Yeni Araç Formu</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Brand" class="form-label">Marka</label>
                            <input asp-for="Brand" class="form-control" placeholder="Örn: BMW" />
                            <span asp-validation-for="Brand" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Model" class="form-label">Model</label>
                            <input asp-for="Model" class="form-control" placeholder="Örn: 3.20i" />
                            <span asp-validation-for="Model" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="PlateNumber" class="form-label">Plaka</label>
                            <input asp-for="PlateNumber" class="form-control" placeholder="34 ABC 123" />
                            <span asp-validation-for="PlateNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Year" class="form-label">Yıl</label>
                            <input asp-for="Year" type="number" class="form-control" value="@DateTime.Now.Year" />
                            <span asp-validation-for="Year" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Araç Resimleri</label>
                        <input type="file" name="imgFiles" class="form-control" multiple accept="image/*" />
                        <div class="form-text">Birden fazla resim seçmek için CTRL tuşuna basılı tutarak seçim yapın.</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DailyPrice" class="form-label">Günlük Fiyat (₺)</label>
                            <input asp-for="DailyPrice" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="DailyPrice" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label">Durum</label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<VehicleStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}