@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rentix - Aramıza Katıl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .register-container {
            height: 100vh;
            overflow: hidden;
        }

        /* SOL TARAFTAKİ GÖRSEL ALANI */
        .bg-image {
            background-image: url('https://images.unsplash.com/photo-1549317661-bd32c8ce0db2?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80');
            background-size: cover;
            background-position: center;
            height: 100%;
            position: relative;
        }

        .bg-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.7));
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 40px;
            color: white;
        }

        /* SAĞ TARAFTAKİ FORM ALANI */
        .form-section {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            background-color: white;
            overflow-y: auto;
        }

        .form-wrapper {
            width: 100%;
            max-width: 450px;
            padding: 40px;
        }

        .form-floating > .form-control:focus ~ label {
            color: #198754;
        }

        .form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.15);
        }

        .btn-register {
            background-color: #198754;
            border-color: #198754;
            color: white;
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

            .btn-register:hover {
                background-color: #157347;
                border-color: #146c43;
                color: white;
            }

        @@media (max-width: 991.98px) {
            .bg-image {
                display: none;
            }

            .form-section {
                background-color: #f8f9fa;
            }

            .form-wrapper {
                background: white;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(0,0,0,0.05);
                margin: 20px;
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid register-container">
        <div class="row h-100">
            <div class="col-lg-7 p-0 d-none d-lg-block">
                <div class="bg-image">
                    <div class="bg-overlay">
                        <h1 class="display-4 fw-bold">Özgürlüğü Keşfet.</h1>
                        <p class="fs-4">Binlerce araç arasından seçim yap, maceraya hemen başla.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-5 form-section">
                <div class="form-wrapper">
                    <div class="text-center mb-4">
                        <a href="/" class="text-decoration-none"><h2 class="fw-bold text-success mb-0">Rentix</h2></a>
                        <p class="text-muted mt-2">Hızlıca hesap oluşturun</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="Ad" />
                                    <label asp-for="Input.FirstName" class="text-muted">Ad</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Soyad" />
                                    <label asp-for="Input.LastName" class="text-muted">Soyad</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted"><i class="bi bi-envelope"></i> E-Posta</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                            <label asp-for="Input.Password" class="text-muted"><i class="bi bi-lock"></i> Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="text-muted"><i class="bi bi-lock-fill"></i> Şifre Tekrar</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-4">
                            <button id="registerSubmit" type="submit" class="btn btn-register btn-lg rounded-pill shadow-sm">Hesap Oluştur</button>
                        </div>

                        <div class="text-center border-top pt-4">
                            <p class="text-muted small mb-2">Zaten bir hesabınız var mı?</p>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-dark w-100 rounded-pill">Giriş Yap</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>ku