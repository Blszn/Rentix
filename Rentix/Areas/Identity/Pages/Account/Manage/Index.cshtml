@page
@model IndexModel
@{
    ViewData["Title"] = "Profil Ayarları";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <div class="col-md-8">
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold text-primary">Profil Bilgileri</h5>
            </div>
            <div class="card-body p-4">
                <form id="profile-form" method="post">

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control bg-light" disabled />
                        <label asp-for="Username" class="form-label text-muted">Kullanıcı Adı (Email)</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="555 123 45 67" />
                        <label asp-for="Input.PhoneNumber" class="form-label">Telefon Numarası</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light border-0">
            <div class="card-body">
                <h6 class="fw-bold"><i class="bi bi-shield-lock"></i> Güvenlik İpucu</h6>
                <p class="small text-muted mb-0">
                    Telefon numaranızı güncel tutmak, hesabınızın güvenliği ve kiralama bildirimleri için önemlidir.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}