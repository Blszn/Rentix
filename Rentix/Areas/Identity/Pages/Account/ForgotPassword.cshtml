@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = null; /* Navbar'sız, odaklanmış sayfa */
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rentix - Şifre Sıfırlama</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .login-container {
            height: 100vh;
            overflow: hidden;
        }

        /* SOL TARAFTAKİ GÖRSEL ALANI */
        .bg-image {
            /* Farklı bir görsel kullanalım (Detay fotoğrafı) */
            background-image: url('https://images.unsplash.com/photo-1494976388531-d1058494cdd8?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80');
            background-size: cover;
            background-position: center;
            height: 100%;
            position: relative;
        }

        .bg-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.8));
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 40px;
            color: white;
        }

        /* SAĞ TARAFTAKİ FORM ALANI */
        .form-section {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            background-color: white;
        }

        .form-wrapper {
            width: 100%;
            max-width: 450px;
            padding: 40px;
        }

        .form-floating > .form-control:focus ~ label {
            color: #dc3545; /* Hata/Uyarı rengine yakın bir ton veya Primary */
        }

        .form-control:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.15);
        }

        .btn-reset {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

            .btn-reset:hover {
                background-color: #bb2d3b;
                border-color: #b02a37;
                color: white;
            }

        /* MOBİL UYUM (@@media kullanarak Razor hatasını engelledik) */
        @@media (max-width: 991.98px) {
            .bg-image {
                display: none;
            }

            .form-section {
                background-color: #f8f9fa;
            }

            .form-wrapper {
                background: white;
                border-radius: 20px;
                box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid login-container">
        <div class="row h-100">

            <div class="col-lg-7 p-0 d-none d-lg-block">
                <div class="bg-image">
                    <div class="bg-overlay">
                        <h1 class="display-5 fw-bold">Endişelenmeyin.</h1>
                        <p class="fs-4">Hesabınızı kurtarmak sadece birkaç saniye sürer.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-5 form-section">
                <div class="form-wrapper">

                    <div class="text-center mb-5">
                        <div class="mb-3 text-danger" style="font-size: 3rem;">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                        <h2 class="fw-bold mb-2">Şifremi Unuttum</h2>
                        <p class="text-muted">E-posta adresinizi girin, size sıfırlama bağlantısı gönderelim.</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted"><i class="bi bi-envelope"></i> Kayıtlı E-Posta</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-reset btn-lg rounded-pill shadow-sm">
                                Bağlantı Gönder
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-page="./Login" class="text-decoration-none fw-bold text-secondary">
                                <i class="bi bi-arrow-left"></i> Giriş Ekranına Dön
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>