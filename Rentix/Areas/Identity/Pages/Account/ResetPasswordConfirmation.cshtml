@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Şifre Sıfırlandı";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card border-0 shadow-lg rounded-4 p-5">
                <div class="mb-4 text-success icon-animate">
                    <i class="bi bi-check-circle-fill" style="font-size: 5rem;"></i>
                </div>

                <h2 class="fw-bold mb-3">Şifreniz Yenilendi!</h2>
                <p class="text-muted mb-4">
                    Şifreniz başarıyla değiştirildi. Artık yeni şifrenizle giriş yapabilirsiniz.
                </p>

                <div class="alert alert-light border shadow-sm rounded-3 d-inline-block px-4">
                    <span id="redirectCount" class="fw-bold text-success fs-5">3</span> saniye içinde giriş ekranına yönlendiriliyorsunuz...
                </div>

                <div class="mt-4">
                    <a href="/Identity/Account/Login" class="btn btn-primary px-4 rounded-pill">
                        Hemen Giriş Yap
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var seconds = 3;
        var element = document.getElementById("redirectCount");

        var interval = setInterval(function() {
            seconds--;
            if(element) element.innerText = seconds;

            if (seconds <= 0) {
                clearInterval(interval);
                window.location.href = "/Identity/Account/Login";
            }
        }, 1000);
    });
</script>

<style>
    body {
        background-color: #f8f9fa;
    }

    .icon-animate i {
        display: inline-block;
        animation: popIn 0.6s ease-out;
    }

    @@keyframes popIn {
        0% {
            transform: scale(0);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>